<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/grays600"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">


        <TextView
            android:id="@+id/importConfig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:maxLines="1"
            android:layout_marginVertical="16dp"
            android:padding="10dp"
            android:text="Import inpv config file"
            android:textColor="@color/white"
            style="@style/SmallMed"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/grays500"
            />

        <TextView
            android:id="@+id/importUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="16dp"
            android:text="Import url from clipboard"
            android:textColor="@color/white"
            style="@style/SmallMed"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/grays500"
            />

        <TextView
            android:id="@+id/importJson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="16dp"
            android:maxLines="1"
            android:text="Import json from clipboard"
            android:textColor="@color/white"
            style="@style/SmallMed"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/grays500"
            />


        <TextView
            android:id="@+id/scanQr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="16dp"
            android:text="Scan config from QR Code"
            android:maxLines="1"
            android:textColor="@color/white"
            style="@style/SmallMed"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>